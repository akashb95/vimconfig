call plug#begin()
   Plug 'preservim/nerdtree'

   Plug 'airblade/vim-gitgutter'

   Plug 'doums/darcula'
   Plug 'vim-airline/vim-airline'
   Plug 'vim-airline/vim-airline-themes'

   Plug 'junegunn/fzf', { 'dir': '~/.fzf', 'do': './install --all' }
   Plug 'junegunn/fzf.vim'

   Plug 'markonm/traces.vim'

   Plug 'tpope/vim-commentary'

   Plug 'tpope/vim-surround'

   Plug 'wellle/context.vim'

   " Please integration
   Plug 'nvim-treesitter/nvim-treesitter'
   Plug 'nvim-lua/plenary.nvim'
   Plug 'mfussenegger/nvim-dap'
   Plug 'marcuscaisey/please.nvim'

   " vim-devicons has to be last
   Plug 'ryanoasis/vim-devicons'
call plug#end()

set autoread
au CursorHold * checktime

set nospell

set noswapfile

set nocompatible

set clipboard=unnamedplus

set number
set relativenumber

set linebreak

set tabstop=4
set shiftwidth=4
set expandtab

set background=dark
set scrolloff=3
set backspace=indent,eol,start
set matchpairs+=<:>

set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch

set ttyfast
set mouse=a

let mapleader = '\'

syntax on
colorscheme darcula
let g:airline_theme='raven'
let g:airline_powerline_fonts = 1

" Find and replace a word
:nnoremap <C-g> :%s/\<<C-r><C-w>\>/

tnoremap <Esc> <C-\><C-n>

au BufEnter * if &buftype == 'terminal' | :startinsert | endif

function! OpenTerminal()
	split term://bash
	resize 10
endfunction
nnoremap <C-n><C-t> :call OpenTerminal()<CR>

set statusline+=%#warningmsg#
set statusline+=%*

" NERDTree
" Start NERDTree when Vim is started without file arguments.
autocmd vimenter * NERDTree | wincmd p
autocmd bufenter * if (winnr("$") == 1 && exists("b:NERDTree") && b:NERDTree.isTabTree()) | q | endif
nnoremap <silent> <Leader>e :NERDTreeToggle<CR>

" Please.nvim
nnoremap <leader>pj silent <cmd>Please jump_to_target<cr>
nnoremap <leader>pb silent <cmd>Please build<cr>
nnoremap <leader>pt silent <cmd>Please test<cr>

" Set column indicator for files
au BufReadPost,BufNewFile *.py set colorcolumn=120
au BufReadPost,BufNewFile *.go set colorcolumn=120
au BufReadPost,BufNewFile *.md set colorcolumn=120

" Please language server
au BufRead,BufNewFile BUILD,*.build_def,*.build_defs set filetype=please
au BufRead,BufNewFile BUILD,*.build_def,*.build_defs set syntax=python
